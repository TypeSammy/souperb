<form action="create" method="POST">
  <input type="text" placeholder="Title" name="recipe_name">

  <div>
    <input type="text" placeholder="Serving size" name="serving_size">
    <label for="categories">Select categories</label>
    <select name="categories[]" id="categories" size="4" multiple>
      <option value="breakfast">Breakfast</option>
      <option value="lunch">Lunch</option>
      <option value="dinner">Dinner</option>
      <option value="dessert">Dessert</option>
      <option value="favourite">Favourite</option>
    </select>
    <input type="text" placeholder="Prep time" name="prep_time">
    <input type="text" placeholder="Cook time" name="cook_time">
    <input type="text" placeholder="Image URL" name="image_url">
    <input type="text" placeholder="Source URL" name="source">
  </div>

  <div>
    <p>Ingredients</p>
    <label for="ingredients">Ingredients</label>
    <textarea name="ingredients" cols="50" rows="4"></textarea>
  </div>
    <div>
    <p>Method</p>
    <label for="method">Method</label>
    <textarea name="method" cols="50" rows="4"></textarea>
  </div>

  <div>
    <label for="ingredient amount">Nutrition</label>
    <input type="number" step="0.01" placeholder="Calories" name="calories">
    <input type="number" step="0.01" placeholder="Total fat" name="total_fat">
    <input type="number" step="0.01" placeholder="Saturated fat" name="saturated_fat">
    <input type="number" step="0.01" placeholder="Cholesterol" name="cholesterol">
    <input type="number" step="0.01" placeholder="Sodium" name="sodium">
    <input type="number" step="0.01" placeholder="Total carb" name="total_carb">
    <input type="number" step="0.01" placeholder="Dietary Fibre" name="dietary_fibre">
    <input type="number" step="0.01" placeholder="Sugars" name="sugars">
    <input type="number" step="0.01" placeholder="Protein" name="protein">
  </div>

  <input type="submit" value="Create">
</form>
